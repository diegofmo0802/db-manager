{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Node",
      "declaration": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "outDir": "build",
      "rootDir": "src",
      "baseUrl": "src"
    },
    "include": [
      "src/**/*"
    ]
  }